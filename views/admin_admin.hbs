
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    
    <div class="dashboard-main-wrapper">
        {{>admin/navbar}}
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- left sidebar -->
        <!-- ============================================================== -->
        {{> admin/sidemenu}}
        <!-- ============================================================== -->
        <!-- end left sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    {{>admin/pageheader}}
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->

                <div class="row">
                    <!-- ============================================================== -->
                    <!-- basic table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Basic Table</h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <colgroup>
                                            <col span="1" style="width: 20%;">
                                            <col span="1" style="width: 30%;">
                                            <col span="1" style="width: 30%;">
                                            <col span="1" style="width: 20%;">
                                        </colgroup>
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Username</th>
                                                <th>Password</th>
                                                <th>Option</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each admins}}
                                            <tr>
                                                <form id="frmHidden{{idadmin}}" method="post">
                                                <td id="{{idadmin}}">{{idadmin}}</td>
                                                <td id="form{{idadmin}}" style="display: none"><input type="text" class="form-control" name="adminID{{idadmin}}" size="6" value="{{idadmin}}"></td>
                                                <td id="name{{idadmin}}">{{username}}</td>
                                                <td id="formName{{idadmin}}" style="display: none"><input type="text" class="form-control" name="adminName{{idadmin}}"  value="{{username}}"></td>
                                                <td id="password{{idadmin}}"><p style="text-overflow: ellipsis; overflow: hidden; white-space: nowrap; width:50%">{{password}}</p></td>
                                                <td id="formPassword{{idadmin}}" style="display: none"><input type="text" class="form-control" name="adminPassword{{idadmin}}"  value="{{password}}"></td>
                                                <td style="text-align: center;">
                                                    <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete" id="del{{idadmin}}" onclick="delClick({{idadmin}},'admins/deleteAdmin')"><i class="fa fa-trash"></i></button>
                                                </li>
                                                </ul>
                                                </td>
                                                </form>
                                            </tr>
                                            {{/each}}

                                            <form id="frmHidden" method="post">
                                            <tr id = "newrow" style="display: none">
                                                <td><input type="text" class="form-control" id="catID" size="6"name="adminNew" value="-1" readonly></td>
                                                <td><input type="text" class="form-control" id="catName" name="adminNameNew" value=""></td>
                                                <td><input type="text" class="form-control" id="catName" name="adminPasswordNew" value=""></td>
                                                <td style="text-align: center;">
                                                    <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <button class="btn btn-success btn-sm rounded-0" type="submit" data-toggle="tooltip" data-placement="top" title="Add" id="add" onclick="addClick('admins/addAdmin')"><i class="fa fa-check"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Remove" id="remove" onclick="removeClick(-1)"><i class="fa fa-times"></i></button>
                                                </li>
                                                </ul>
                                                </td>
                                            </tr>
                                            </form>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Username</th>
                                                <th>Password</th>
                                                <th>Option</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    
                                </div>
                                <div class="row">
                                <div class="col-sm-10" style="color: red; padding-left: 20%; margin-top: 35px;">{{message}}</div>
                                <div class="col-sm-2"  style="margin-top: 25px">
                                    <button type="button" class="btn btn-info add-new" onclick="document.getElementById('newrow').style.display = 'table-row'"><i class="fa fa-plus"></i> Add New</button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end basic table  -->
                    <!-- ============================================================== -->
                </div>
                
            </div>
        {{>admin/footer}}
        </div>
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
    </div>
    <script src="/js/addbutton.js"></script>
    <!-- ============================================================== -->
    <!-- end main wrapper  -->

