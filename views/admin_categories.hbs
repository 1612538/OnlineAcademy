
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
        {{>admin/navbar}}
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- left sidebar -->
        <!-- ============================================================== -->
        {{> admin/sidemenu}}
        <!-- ============================================================== -->
        <!-- end left sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    {{>admin/pageheader}}
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->

                <div class="row">
                    <!-- ============================================================== -->
                    <!-- basic table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Basic Table</h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <colgroup>
                                            <col span="1" style="width: 20%;">
                                            <col span="1" style="width: 60%;">
                                            <col span="1" style="width: 20%;">
                                        </colgroup>
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Option</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each cats}}
                                            <tr>
                                                <form id="frmHidden{{idcategory}}" method="post">
                                                <td id="{{idcategory}}">{{idcategory}}</td>
                                                <td id="form{{idcategory}}" style="display: none"><input type="text" class="form-control" name="catID{{idcategory}}" size="6" value="{{idcategory}}"></td>
                                                <td id="name{{idcategory}}">{{name}}</td>
                                                <td id="formName{{idcategory}}" style="display: none"><input type="text" class="form-control" name="catName{{idcategory}}"  value="{{name}}"></td>
                                                <td style="text-align: center;">
                                                    <ul class="list-inline m-0">
                                                    
                                                <li class="list-inline-item">
                                                    <button class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit" id="edit{{idcategory}}" onclick="editClick({{idcategory}})"><i class="fa fa-edit"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Update" id="update{{idcategory}}" onclick="updateClick({{idcategory}})" style="display: none"><i class="fa fa-check"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete" id="del{{idcategory}}" onclick="delClick({{idcategory}})"><i class="fa fa-trash"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Remove change" id="remove{{idcategory}}" onclick="removeClick({{idcategory}})"style="display: none"><i class="fa fa-times"></i></button>
                                                </li>
                                                </ul>
                                                </td>
                                                </form>
                                            </tr>
                                            {{/each}}

                                            <form id="frmHidden" method="post">
                                            <tr id = "newrow" style="display: none">
                                                <td><input type="text" class="form-control" id="catID" size="6"name="catIDnew" value="-1" readonly></td>
                                                <td><input type="text" class="form-control" id="catName" name="catNameNew" value=""></td>
                                                <td style="text-align: center;">
                                                    <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <button class="btn btn-success btn-sm rounded-0" type="submit" data-toggle="tooltip" data-placement="top" title="Add" id="add" onclick="addClick()"><i class="fa fa-check"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Remove" id="remove" onclick="removeClick(-1)"><i class="fa fa-times"></i></button>
                                                </li>
                                                </ul>
                                                </td>
                                            </tr>
                                            </form>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Option</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    
                                </div>
                                <div class="row">
                                <div class="col-sm-10"></div>
                                <div class="col-sm-2"  style="margin-top: 25px">
                                    <button type="button" class="btn btn-info add-new" onclick="document.getElementById('newrow').style.display = 'table-row'"><i class="fa fa-plus"></i> Add New</button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end basic table  -->
                    <!-- ============================================================== -->
                </div>
                
            </div>
        {{>admin/footer}}
        </div>
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
    </div>

    <!-- ============================================================== -->
    <!-- end main wrapper  -->

