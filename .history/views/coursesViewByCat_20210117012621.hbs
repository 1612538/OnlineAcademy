<div class="mainbox">
    {{>main/headerNavbar}}
</div>
<div class="mainbox2" style="height:max-content; border: 0px; background-color:transparent">
    <div style="padding: 3vh 3% 3vh 3%">
    <div class="row my-2">
        <div class="col-lg-11 order-lg-1 container-main">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a href="" data-target="#courses" data-toggle="tab" class="nav-link active">Courses</a>
                </li>
            </ul>
            <div class="tab-content" style="background-color: transparent;">
                <div class="container tab-pane active" id="courses">
                    <h5 class="mb-3">Courses related to "{{category}}"</h5>
                    {{#each courses}}
                    {{#if_eq {{math @key "/" 5}} 0}}<div class="row" style="justify-content: center; align-items: center">{{/if_eq}}
                        <div class="card" style="width: 21%">
                <img class="card-img-top" src="https://gymme.vn/wp-content/uploads/2020/08/4-L%C3%BD-do-n%C3%AAn-ch%E1%BB%8Dn-Yoga-thay-cho-c%C3%A1c-b%E1%BB%99-m%C3%B4n-th%E1%BB%83-thao-kh%C3%A1c-1.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description1}}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Cập nhật vào 2 ngày trước</small>
                </div>
            </div>
            
                    {{#if_eq {{math @key "/" 5}} 0}}</div>{{/if_eq}}
                    <!--/row-->
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<div class="mainbox">
    {{>main/footer}}
</div>