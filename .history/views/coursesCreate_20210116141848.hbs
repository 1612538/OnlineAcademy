<div class="mainbox">
    {{>main/headerNavbar}}
</div>

<div class="card" style="width: 80%; margin-left: 10%;">
	<div class="row">
<article class="card-body p-5">
	<h3 class="title mb-3">Create a new course</h3>
<form method="POST" action="/CreateCourse" enctype="multipart/form-data">
    <div class="row">
    <div class="form-group col-5">
    <label for="imageInput"><b>Course Avatar</b></label>
<div class="custom-file">
    <label class="custom-file-label" for="imageInput">Choose image</label>
    <input type="file" class="custom-file-input" id="imageInput" accept="image/*" name="imageInput" required>
  </div></div>
  <div class="form-group col-7">
    <label for="courseName"><b>Course name</b></label>
    <input type="text" class="form-control" id="nameInput" name="nameInput" placeholder="Name" required>
  </div>
  </div>
    <div class="row">
    <div class="form-group col-5">
    <label for="slideInput"><b>Course's slide</b></label>
<div class="custom-file">
    <label class="custom-file-label" for="slideInput">Choose file</label>
    <input type="file" class="custom-file-input" id="slideInput" name="slideInput" accept=".pdf,.doc, .docx, .ppt, .pptx" required>
  </div></div>
  <div class="form-group col-3">
    <label for="priceInput"><b>Course price</b></label>
    <input type="text" class="form-control" id="priceInput" name="priceInput" placeholder="Price" required>
  </div>
  <div class="form-group col-4">
    <label for="categoryInput"><b>Course category</b></label>
    <select class="custom-select mb-3" id="categoryInput" name="categoryInput">
  <option selected>Choose category</option>
  {{#each smallcats}}
  <option value="{{idsmall_category}}">{{name}}</option>
  {{/each}}
</select>
  </div>
  </div>
  <div class="form-group">
    <label for="briefDesc"><b>Brief description</b></label>
    <textarea class="form-control" id="briefDesc" name="briefDesc" rows="3" required></textarea>
  </div>
  <div class="form-group">
    <label for="detailDesc"><b>Detail description</b></label>
    <textarea class="form-control" id="detailDesc" name="detailDesc" rows="3"></textarea>
  </div>
    <div class="mr-5">
    <button type="submit" class="btn btn-primary float-right">Create course</button></div>
</form>
</article> <!-- card-body.// -->
		</aside> <!-- col.// -->
	</div> <!-- row.// -->

</div> <!-- card.// -->
