
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
        {{>admin/navbar}}
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- left sidebar -->
        <!-- ============================================================== -->
        {{> admin/sidemenu}}
        <!-- ============================================================== -->
        <!-- end left sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    {{>admin/pageheader}}
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->

                <div class="row">
                    <!-- ============================================================== -->
                    <!-- basic table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Basic Table</h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <colgroup>
                                            <col span="1" style="width: 5%;">
                                            <col span="1" style="width: 15%;">
                                            <col span="1" style="width: 15%;">
                                            <col span="1" style="width: 10%;">
                                            <col span="1" style="width: 10%;">
                                            <col span="1" style="width: 15%;">
                                            <col span="1" style="width: 15%;">
                                            <col span="1" style="width: 15%;">
                                        </colgroup>
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Username</th>
                                                <th>Password</th>
                                                <th>Firstname</th>
                                                <th>Lastname</th>
                                                <th>Workplace</th>
                                                <th>Email</th>
                                                <th>Option</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each teachers}}
                                            <tr>
                                                <form id="frmHidden{{idteacher}}" method="post">
                                                <td id="{{idteacher}}">{{idteacher}}</td>
                                                <td id="form{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherID{{idteacher}}" size="6" value="{{idteacher}}"></td>

                                                <td id="name{{idteacher}}">{{username}}</td>
                                                <td id="formName{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherName{{idteacher}}"  value="{{username}}"></td>

                                                <td id="password{{idteacher}}"><p style="text-overflow: ellipsis; overflow: hidden; white-space: nowrap; width: 160px;">{{password}}</p></td>
                                                <td id="formPassword{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherPassword{{idteacher}}"  value="{{password}}"></td>

                                                <td id="firstname{{idteacher}}">{{firstname}}</td>
                                                <td id="formFirst{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherFirst{{idteacher}}"  value="{{firstname}}"></td>

                                                <td id="lastname{{idteacher}}">{{lastname}}</td>
                                                <td id="formLast{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherLast{{idteacher}}"  value="{{lastname}}"></td>

                                                <td id="workplace{{idteacher}}">{{workplace}}</td>
                                                <td id="formWork{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherWork{{idteacher}}"  value="{{workplace}}"></td>

                                                <td id="email{{idteacher}}">{{email}}</td>
                                                <td id="formEmail{{idteacher}}" style="display: none"><input type="text" class="form-control" name="teacherEmail{{idteacher}}"  value="{{email}}"></td>
                                                
                                                <td style="text-align: center;">
                                                    <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <button class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit" id="edit{{idteacher}}" onclick="editClick({{idteacher}})"><i class="fa fa-edit"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Update" id="update{{idteacher}}" onclick="updateClick({{idteacher}},'teachers/updateTeacher')" style="display: none"><i class="fa fa-check"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete" id="del{{idteacher}}" onclick="delClick({{idteacher}}, 'teachers/deleteTeacher')"><i class="fa fa-trash"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Remove change" id="remove{{idteacher}}" onclick="removeClick({{idteacher}})"style="display: none"><i class="fa fa-times"></i></button>
                                                </li>
                                                {{#if_eq isBlocked 1}}
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Unlock" id="unlock{{idteacher}}" onclick="unlockClick({{idteacher}},'teachers/unlockTeacher/{{idteacher}}')"><i class="fa fa-lock"></i></button>
                                                </li>
                                                {{else}}
                                                <li class="list-inline-item">
                                                    <button class="btn btn-light border btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Lock" id="lock{{idteacher}}" onclick="lockClick({{idteacher}},'teachers/lockTeacher/{{idteacher}}')"><i class="fa fa-lock-open"></i></button>
                                                </li>
                                                {{/if_eq}}
                                                </ul>
                                                </td>
                                                </form>
                                            </tr>
                                            {{/each}}

                                            <form id="frmHidden" method="post">
                                            <tr id = "newrow" style="display: none">
                                                <td><input type="text" class="form-control" id="teacherID" name="teacherNew" value="-1" readonly></td>
                                                <td><input type="text" class="form-control" id="teacherName" name="teacherNameNew" value=""></td>
                                                <td><input type="text" class="form-control" id="teacherPassword" name="teacherPasswordNew" value=""></td>
                                                <td><input type="text" class="form-control" id="teacherFirst" name="teacherFirstNew" value=""></td>
                                                <td><input type="text" class="form-control" id="teacherLast" name="teacherLastNew" value=""></td>
                                                <td><input type="text" class="form-control" id="teacherWork" name="teacherWorkNew" value=""></td>
                                                <td><input type="text" class="form-control" id="teacherDate" name="teacherEmailNew" value=""></td>
                                                <td style="text-align: center;">
                                                    <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <button class="btn btn-success btn-sm rounded-0" type="submit" data-toggle="tooltip" data-placement="top" title="Add" id="add" onclick="addClick('teachers/addTeacher')"><i class="fa fa-check"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Remove" id="remove" onclick="removeClick(-1)"><i class="fa fa-times"></i></button>
                                                </li>
                                                </ul>
                                                </td>
                                            </tr>
                                            </form>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Username</th>
                                                <th>Password</th>
                                                <th>Firstname</th>
                                                <th>Lastname</th>
                                                <th>Workplace</th>
                                                <th>Email</th>
                                                <th>Option</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    
                                </div>
                                <div class="row">
                                <div class="col-sm-10" style="color: red; margin-top: 35px; padding-left: 20%">{{message}}</div>
                                <div class="col-sm-2"  style="margin-top: 25px">
                                    <button type="button" class="btn btn-info add-new" onclick="document.getElementById('newrow').style.display = 'table-row'"><i class="fa fa-plus"></i> Add New</button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end basic table  -->
                    <!-- ============================================================== -->
                </div>
                
            </div>
        {{>admin/footer}}
        </div>
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
    </div>
    <script src="/js/addbutton.js"></script>
    <!-- ============================================================== -->
    <!-- end main wrapper  -->

