<div class="mainbox">
    {{>main/headerNavbar}}
</div>
<div class="mainbox2" style="background-color: transparent; border: 0">
    <div style="padding: 3vh 3% 3vh 3%">
    <div class="row my-2">
        <div class="col-lg-11 container-main">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a href="/searchResult?keyword={{keyword}}&searchByCourse=true" data-target="#courses" data-toggle="tab" class="nav-link active">Courses</a>
                </li>
                <li class="nav-item">
                    <a href="/searchResult?keyword={{keyword}}&searchByCourse=true" data-target="#categories" data-toggle="tab" class="nav-link">Categories</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="container tab-pane active" id="courses">
                    <h5 class="mb-3">Search courses by "{{keyword}}"</h5>
                    {{#if message1}} <div class="row">
                        <div class="col-3"></div><div class="col-9">{{message1}}</div>
                    </div>{{else}}
                    {{#each courses}}
                    {{#if_eq (math @key "%" 4) 0}}<div class="row" style="justify-content: center; align-items: center">{{/if_eq}}
                        <div class="card" style="width: 22%">
                <a href="/detail/courseid={{idcourses}}" class="stretched-link"><img class="card-img-top" src="{{img}}" alt="{{@key}}"></a>
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description1}}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last Update: {{lastupdate}}</small>
                </div>
            </div>
            
                    {{#if_eq (math @key "%" 4) 3}}</div>{{else}}
                    {{#if_eq (math @key "+" 1) ../courses.length}}</div>{{/if_eq}}{{/if_eq}}
                    {{/each}} {{/if}}
                    <!--/row-->
                </div>

                <div class="container tab-pane fade" id="categories">
                    <h5 class="mb-3">Search categories by "{{keyword}}"</h5>
                    <div class="row">
                        {{#if message2}}<div class="col-3"></div><div class="col-9">{{message2}}</div>{{/if}}
                    </div>
                    <!--/row-->
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<div class="mainbox">
    {{>main/footer}}
</div>